@model IEnumerable<ProyectoInmobiliariaADO.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
}

<h1>Listado de Contratos</h1>

@if (TempData["Success"] != null)
{
    <div id="temp-success" class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div id="temp-error" class="alert alert-danger">@TempData["Error"]</div>
}

@section Scripts {
    <script>
        // Espera 3 segundos (3000 ms) y oculta los mensajes
        setTimeout(function() {
            var successDiv = document.getElementById("temp-success");
            if (successDiv) successDiv.style.display = "none";

            var errorDiv = document.getElementById("temp-error");
            if (errorDiv) errorDiv.style.display = "none";
        }, 3000);
    </script>
}


<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Contrato</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Inmueble</th>
            <th>Inquilino</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Monto</th>
            <th>Estado</th>
            <th>Observaciones</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.InmuebleDireccion</td>
            <td>@($"{item.InquilinoNombre} {item.InquilinoApellido}")</td>
            <td>@item.FechaInicio.ToShortDateString()</td>
            <td>@item.FechaFin?.ToShortDateString()</td>
            <td>$@item.Monto</td>
            <td>@item.Estado</td>
            <td>@item.Observaciones</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline">
                    <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>

