@model ProyectoInmobiliariaADO.Models.Pago

@{
    ViewData["Title"] = "Editar Pago";
}

@await Html.PartialAsync("_Navbar")

<div class="container mt-4">
    <h1 class="mb-4 text-warning">
        <i class="bi bi-pencil-square"></i> Editar Pago
    </h1>

    @if (TempData["PagoError"] != null)
    {
        <div id="alertaError" class="alert alert-danger">@TempData["PagoError"]</div>
        <script>
            setTimeout(function() {
                var alerta = document.getElementById("alertaError");
                if (alerta) alerta.style.display = "none";
            }, 3000);
        </script>
    }

    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Formulario de Edici√≥n</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="ContratoId" class="form-label fw-bold">Contrato</label>
                    <select asp-for="ContratoId" class="form-control" disabled asp-items="ViewBag.Contratos">
                        <option value="">Seleccione un contrato</option>
                    </select>
                    <span asp-validation-for="ContratoId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Fecha" class="form-label fw-bold">Fecha</label>
                    <input asp-for="Fecha" type="date" class="form-control" disabled />
                    <span asp-validation-for="Fecha" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Importe" class="form-label fw-bold">Importe</label>
                    <input asp-for="Importe" class="form-control" type="number" step="0.01" min="0" disabled />
                    <span asp-validation-for="Importe" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="MedioPago" class="form-label fw-bold">Medio de Pago</label>
                    <select asp-for="MedioPago" class="form-control" disabled asp-items="ViewBag.MediosPago">
                        <option value="">Seleccione medio de pago</option>
                    </select>
                    <span asp-validation-for="MedioPago" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Observaciones" class="form-label fw-bold">Detalle</label>
                    <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
