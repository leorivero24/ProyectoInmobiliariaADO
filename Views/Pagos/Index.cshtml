@model IEnumerable<ProyectoInmobiliariaADO.Models.Pago>

@{
    ViewData["Title"] = "Pagos";
    bool esAdmin = User.IsInRole("Administrador");
}

@await Html.PartialAsync("_Navbar")

<h1 class="mb-4">Listado de Pagos</h1>

@if (TempData["PagoSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="alertaPagoSuccess">
        @TempData["PagoSuccess"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["PagoError"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" id="alertaPagoError">
        @TempData["PagoError"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@section Scripts {
    <script>
        setTimeout(function () {
            var alertaS = document.getElementById("alertaPagoSuccess");
            if (alertaS) alertaS.style.display = "none";
            var alertaE = document.getElementById("alertaPagoError");
            if (alertaE) alertaE.style.display = "none";
        }, 4000);
    </script>
}

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Nuevo Pago</a>
</p>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Nro</th>
            <th>Descripción</th>
            <th>Fecha</th>
            <th>Importe</th>
            <th>M. de Pago</th>
            <th>Detalle</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var descripcion = $"{item.ContratoInmuebleDireccion ?? "Sin dirección"} - {item.ContratoInmuebleTipo ?? "Sin tipo"} - {item.ContratoInquilinoNombre ?? "N/D"} {item.ContratoInquilinoApellido ?? ""}";
            var estadoClass = item.Estado == "Anulado" ? "text-danger fw-bold" : "text-success";

            <tr>
                <td>@item.Id</td>
                <td>@descripcion</td>
                <td>@item.Fecha.ToShortDateString()</td>
                <td>$@item.Importe</td>
                <td>@item.MedioPago</td>
                <td>@item.Observaciones</td>
                <td class="@estadoClass">@item.Estado</td>
                <td style="min-width: 300px;">
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">Editar</a>

                        <form asp-action="Anular" asp-route-id="@item.Id" method="post" style="display:inline">
                            <button type="submit" class="btn btn-secondary btn-sm me-1" @(item.Estado == "Anulado" ? "disabled" : "")>
                                @(item.Estado == "Anulado" ? "Anulado" : "Anular")
                            </button>
                        </form>

                        @if (esAdmin)
                        {
                            <form asp-action="EliminarDefinitivo" asp-route-id="@item.Id" method="post" style="display:inline">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-danger btn-sm" disabled>Eliminar</button>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
