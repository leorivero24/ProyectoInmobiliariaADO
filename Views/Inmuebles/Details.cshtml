@model ProyectoInmobiliariaADO.Models.Inmueble

@{
    ViewData["Title"] = "Detalles del Inmueble";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">
        <i class="bi bi-house"></i> Detalles del Inmueble
    </h1>

    <div class="card shadow-lg mb-4 border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Información del Inmueble</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold text-secondary">Dirección</dt>
                <dd class="col-sm-9">@Model.Direccion</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Tipo</dt>
                <dd class="col-sm-9">@Model.Tipo?.Descripcion</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Ambientes</dt>
                <dd class="col-sm-9">@Model.Ambientes</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Superficie</dt>
                <dd class="col-sm-9">@Model.Superficie m²</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Precio</dt>
                <dd class="col-sm-9">$@Model.Precio</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Estado</dt>
                <dd class="col-sm-9">@Model.Estado</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Observaciones</dt>
                <dd class="col-sm-9">@Model.Observaciones</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver al listado
        </a>
    </div>
</div>
