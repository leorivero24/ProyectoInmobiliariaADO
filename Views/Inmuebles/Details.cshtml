@model ProyectoInmobiliariaADO.Models.Inmueble

@{
    ViewData["Title"] = "Detalles Inmueble";
}

<h1>Detalles del Inmueble</h1>

<dl class="row">
    <dt class="col-sm-2">Dirección</dt>
    <dd class="col-sm-10">@Model.Direccion</dd>

    <dt class="col-sm-2">Tipo</dt>
    <dd class="col-sm-10">@Model.Tipo</dd>

    <dt class="col-sm-2">Ambientes</dt>
    <dd class="col-sm-10">@Model.Ambientes</dd>

    <dt class="col-sm-2">Superficie</dt>
    <dd class="col-sm-10">@Model.Superficie m²</dd>

    <dt class="col-sm-2">Precio</dt>
    <dd class="col-sm-10">$@Model.Precio</dd>

    <dt class="col-sm-2">Estado</dt>
    <dd class="col-sm-10">@Model.Estado</dd>

    <dt class="col-sm-2">Observaciones</dt>
    <dd class="col-sm-10">@Model.Observaciones</dd>
</dl>

<a asp-action="Index" class="btn btn-secondary">Volver</a>
