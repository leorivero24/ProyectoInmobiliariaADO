@model ProyectoInmobiliariaADO.Models.Inmueble

@{
    ViewData["Title"] = "Nuevo Inmueble";
    var estados = new List<string> { "Disponible", "Alquilado", "Reservado" }; // Opciones para el estado
}

<h1>Crear Inmueble</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Dirección</label>
        <input asp-for="Direccion" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tipo</label>
        <input asp-for="Tipo" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ambientes</label>
        <input asp-for="Ambientes" class="form-control" />
    </div>
    <div class="form-group">
        <label>Superficie (m²)</label>
        <input asp-for="Superficie" class="form-control" />
    </div>
    <div class="form-group">
        <label>Precio</label>
        <input asp-for="Precio" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PropietarioId" class="control-label">Propietario</label>
        @Html.DropDownListFor(model => model.PropietarioId,
                              (SelectList)ViewBag.Propietarios,
                              "Seleccione un propietario",
                              new { @class = "form-control" })
        <span asp-validation-for="PropietarioId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Estado</label>
        <select asp-for="Estado" class="form-control" asp-items="@(new SelectList(estados))"></select>
    </div>
    <div class="form-group">
        <label>Observaciones</label>
        <textarea asp-for="Observaciones" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
