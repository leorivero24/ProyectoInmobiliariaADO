@model IEnumerable<ProyectoInmobiliariaADO.Models.Inmueble>

<h2>Buscar Inmuebles Disponibles</h2>

<form asp-action="DisponiblesEntreFechas" method="post" class="mb-3">
    <div class="row g-3 align-items-center">
        <div class="col-auto">
            <label>Fecha Inicio</label>
            <input type="date" name="fechaInicio" class="form-control" value="@ViewBag.FechaInicio" required />
        </div>
        <div class="col-auto">
            <label>Fecha Fin</label>
            <input type="date" name="fechaFin" class="form-control" value="@ViewBag.FechaFin" required />
        </div>
        <div class="col-auto mt-4">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </div>
</form>

@if (Model != null && Model.Any())
{
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Direcci√≥n</th>
                <th>Tipo</th>
                <th>Ambientes</th>
                <th>Superficie</th>
                <th>Precio</th>
                <th>Propietario</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Direccion</td>
                    <td>@item.Tipo?.Descripcion</td>
                    <td>@item.Ambientes</td>
                    <td>@item.Superficie</td>
                    <td>@item.Precio</td>
                    <td>@item.PropietarioNombre @item.PropietarioApellido</td>
                    <td>@item.Estado</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (Model != null)
{
    <p class="text-danger">No se encontraron inmuebles disponibles en ese rango de fechas.</p>
}
