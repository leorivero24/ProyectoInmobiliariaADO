
@model ProyectoInmobiliariaADO.Models.Inmueble

@{
    ViewData["Title"] = "Editar Inmueble";
    bool esAdmin = User.IsInRole("Administrador");
}

@await Html.PartialAsync("_Navbar")

<div class="container mt-4">
    <h1 class="mb-4 text-warning">
        <i class="bi bi-pencil-square"></i> Editar Inmueble
    </h1>

    <div class="card shadow-lg border-0">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Formulario de Edición</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group mb-3">
                    <label asp-for="Direccion" class="form-label fw-bold"></label>
                    <input asp-for="Direccion" class="form-control" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="TipoId" class="form-label fw-bold">Tipo</label>
                    @Html.DropDownListFor(model => model.TipoId,
                                          (SelectList)ViewBag.Tipos,
                                          "-- Seleccione Tipo --",
                                          new { @class = "form-control" })
                    <span asp-validation-for="TipoId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Ambientes" class="form-label fw-bold"></label>
                    <input asp-for="Ambientes" class="form-control" type="number" min="0" />
                    <span asp-validation-for="Ambientes" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Superficie" class="form-label fw-bold"></label>
                    <input asp-for="Superficie" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Superficie" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Precio" class="form-label fw-bold"></label>
                    <input asp-for="Precio" class="form-control" type="number" step="0.01" min="0" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PropietarioId" class="form-label fw-bold">Propietario</label>
                    <select asp-for="PropietarioId" class="form-control" asp-items="ViewBag.Propietarios">
                        <option value="">-- Seleccione Propietario --</option>
                    </select>
                    <span asp-validation-for="PropietarioId" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Estado</label>
                    <input type="text" class="form-control" value="@Model.Estado" readonly />
                    <small class="text-muted">El estado se actualiza automáticamente según los contratos.</small>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Observaciones" class="form-label fw-bold"></label>
                    <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Observaciones" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
