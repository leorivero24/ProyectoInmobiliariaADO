@model ProyectoInmobiliariaADO.Models.Inmueble

@{
    ViewData["Title"] = "Eliminar Inmueble";
}

<h1>Eliminar Inmueble</h1>

<h4>¿Está seguro de eliminar este inmueble?</h4>

<dl class="row">
    <dt class="col-sm-2">Dirección</dt>
    <dd class="col-sm-10">@Model.Direccion</dd>
    <dt class="col-sm-2">Tipo</dt>
    <dd class="col-sm-10">@Model.Tipo?.Descripcion</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
