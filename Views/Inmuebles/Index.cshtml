
@model IEnumerable<ProyectoInmobiliariaADO.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles";
}

<h1>Listado de Inmuebles</h1>

@if (TempData["ErrorEliminar"] != null)
{
    <div class="alert alert-danger" id="alertaEliminar" role="alert">
        @TempData["ErrorEliminar"]
    </div>

    <script>
        // Ocultar mensaje después de 3 segundos
        setTimeout(function () {
            var alert = document.getElementById("alertaEliminar");
            if (alert) alert.style.display = "none";
        }, 3000);
    </script>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Nuevo Inmueble</a>
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Dirección</th>
                <th>Tipo</th>
                <th>Ambientes</th>
                <th>Superficie</th>
                <th>Precio</th>
                <th>Propietario</th>
                <th>Estado</th>
                <th>Observaciones</th>
                <th></th> <!-- Columna para botones -->
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Direccion</td>
                <td>@item.Tipo</td>
                <td>@item.Ambientes</td>
                <td>@item.Superficie m²</td>
                <td>$@item.Precio</td>
                <td>@item.PropietarioNombre @item.PropietarioApellido</td>
                <td>@item.Estado</td>
                <td>@item.Observaciones</td>
                <td style="min-width: 200px;">
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>


