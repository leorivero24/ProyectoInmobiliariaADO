@model ProyectoInmobiliariaADO.Models.Usuario

@{
    ViewData["Title"] = "Detalles Usuario";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">
        <i class="bi bi-person-badge"></i> Detalles del Usuario
    </h1>

    <div class="card shadow-lg mb-4 border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Información del Usuario</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold text-secondary">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Rol</dt>
                <dd class="col-sm-9">@((Model.Rol == 0) ? "No roleado" : Model.Rol)</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Activo</dt>
                <dd class="col-sm-9">@((Model.Activo) ? "Sí" : "No")</dd>


                <dt class="col-sm-3 fw-bold text-secondary">Avatar</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Avatar))
                    {
                        <img src="~/uploads/@Model.Avatar" alt="Avatar" width="100" class="img-thumbnail" />

                    }
                    else
                    {
                        <span>No tiene avatar</span>
                    }
                </dd>

                @if (User.IsInRole("Administrador"))
                {
                    <dt class="col-sm-3 fw-bold text-secondary">Fecha creación</dt>
                    <dd class="col-sm-9">@Model.FechaCreacion</dd>

                    <dt class="col-sm-3 fw-bold text-secondary">Último login</dt>
                    <dd class="col-sm-9">@Model.FechaUltimoLogin</dd>
                }
            </dl>

            <div class="d-flex gap-2 mt-4">
               
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>
