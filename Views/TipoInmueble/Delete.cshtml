@model ProyectoInmobiliariaADO.Models.TipoInmueble

@{
    ViewData["Title"] = "Eliminar Tipo de Inmueble";
}

<h2>Eliminar Tipo de Inmueble</h2>

<h4>¿Está seguro que desea eliminar este tipo? Esto solo lo pondrá como Inactivo.</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Descripción</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>
