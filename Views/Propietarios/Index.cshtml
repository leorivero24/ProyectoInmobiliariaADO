@model IEnumerable<ProyectoInmobiliariaADO.Models.Propietario>

@{
    ViewData["Title"] = "Propietarios";
    bool esAdmin = User.IsInRole("Administrador");
}

@await Html.PartialAsync("_Navbar")

<h1>Lista de Propietarios</h1>

<p>
    @* Todos los usuarios logueados pueden crear *@
    <a asp-action="Create" class="btn btn-primary">Nuevo Propietario</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>DNI</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Teléfono</th>
            <th>Email</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DNI</td>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>
                <td>@item.Telefono</td>
                <td>@item.Email</td>
                <td>@item.Direccion</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalles</a>
                        @* Todos pueden editar *@
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        @* Solo admins pueden eliminar *@
                        @if (esAdmin)
                        {
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        }
                        else
                        {
                            <button class="btn btn-danger btn-sm" disabled>Eliminar</button>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
