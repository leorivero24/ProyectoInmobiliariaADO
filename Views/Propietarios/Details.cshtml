@model ProyectoInmobiliariaADO.Models.Propietario

@{
    ViewData["Title"] = "Detalles del Propietario";
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">
        <i class="bi bi-person-vcard"></i> Detalles del Propietario
    </h1>

    <div class="card shadow-lg mb-4 border-0">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Información del Propietario</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold text-secondary">Nombre</dt>
                <dd class="col-sm-9">@Model.Nombre</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Apellido</dt>
                <dd class="col-sm-9">@Model.Apellido</dd>

                <dt class="col-sm-3 fw-bold text-secondary">DNI</dt>
                <dd class="col-sm-9">@Model.DNI</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Teléfono</dt>
                <dd class="col-sm-9">@Model.Telefono</dd>

                <dt class="col-sm-3 fw-bold text-secondary">Dirección</dt>
                <dd class="col-sm-9">@Model.Direccion</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Volver al listado
        </a>
    </div>
</div>
